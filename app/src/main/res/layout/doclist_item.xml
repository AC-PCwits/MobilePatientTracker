<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="wrap_content"
    tools:ignore="MissingClass"
    >


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="0dp"
        android:background="@drawable/border_set_patient_list">

        <!-- This is where the doctor name will be -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Symptoms"
            android:textColor="@android:color/black"
            android:textSize="26sp"
            android:textStyle="bold"
            android:layout_alignParentTop="true"
            android:id="@+id/symptomsText"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="Status"
            android:textSize="22sp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="12dp"
            android:textStyle="bold"
            android:id="@+id/statusText"
            android:gravity="center"
            android:background="@drawable/rounded_corner_pending"
            android:textColor="#f00"/>

        <TextView
            android:id="@+id/dateText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/symptomsText"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:text="date"
            android:textSize="18sp" />



    </RelativeLayout>


</androidx.cardview.widget.CardView>