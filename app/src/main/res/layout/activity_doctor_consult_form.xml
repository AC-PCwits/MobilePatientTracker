<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DoctorConsultForm">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Consultation Form"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"/>

    <LinearLayout
        android:id="@+id/lay1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/textView7"
        android:layout_marginTop="24dp">

        <EditText
            android:id="@+id/pConsultName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Patient Name"
            android:layout_marginLeft="9dp"
            android:layout_marginRight="4.5dp"
            android:inputType="textPersonName"
            android:layout_weight="1"/>

        <EditText
            android:id="@+id/pConsultLName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Last Name"
            android:layout_marginLeft="4.5dp"
            android:layout_marginRight="9dp"
            android:inputType="textPersonName"
            android:layout_weight="1"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/lay2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/lay1"
        android:layout_marginTop="24dp">

        <EditText
            android:id="@+id/pConsultID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="ID No"
            android:layout_marginLeft="9dp"
            android:layout_marginRight="4.5dp"
            android:inputType="textPersonName"
            android:layout_weight="1"/>

        <EditText
            android:id="@+id/pConsultCell"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Cell No"
            android:layout_marginLeft="4.5dp"
            android:layout_marginRight="9dp"
            android:inputType="textPersonName"
            android:layout_weight="1"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/lay3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/lay2"
        android:layout_marginTop="24dp">

        <EditText
            android:id="@+id/dConsultName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Doctor Name"
            android:layout_marginLeft="9dp"
            android:layout_marginRight="4.5dp"
            android:inputType="textPersonName"
            android:layout_weight="1"/>

        <EditText
            android:id="@+id/dConsultLName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Last Name"
            android:layout_marginLeft="4.5dp"
            android:layout_marginRight="9dp"
            android:inputType="textPersonName"
            android:layout_weight="1"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/lay4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/lay3"
        android:layout_marginTop="24dp">

        <EditText
            android:id="@+id/dConsultID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Practice ID"
            android:layout_marginLeft="9dp"
            android:layout_marginRight="4.5dp"
            android:inputType="textPersonName"
            android:layout_weight="1"/>

        <EditText
            android:id="@+id/dType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Speciality"
            android:layout_marginLeft="9dp"
            android:layout_marginRight="4.5dp"
            android:inputType="textPersonName"
            android:layout_weight="1"/>


    </LinearLayout>


    <TextView
        android:id="@+id/textView8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Case Info"
        android:layout_below="@id/lay4"
        android:layout_marginLeft="9dp"
        android:layout_marginRight="9dp"
        android:layout_marginTop="24dp"/>


    <LinearLayout
        android:id="@+id/lay5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/textView8"
        android:layout_marginLeft="9dp"
        android:layout_marginRight="9dp"
        android:layout_marginTop="36dp">

        <RadioGroup
            android:id="@+id/radioGroup4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <RadioButton
                android:id="@+id/radioButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Acute" />

            <RadioButton
                android:id="@+id/radioButton2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Chronic" />

            <RadioButton
                android:id="@+id/radioButton3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Existing" />

            <RadioButton
                android:id="@+id/radioButton4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Injury" />
        </RadioGroup>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <EditText
                android:id="@+id/pConsultSymptoms"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Symptoms"
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/pConsultDiagnosis"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Diagnosis"
                android:inputType="textPersonName"
                android:layout_below="@+id/pConsultSymptoms"
                android:layout_marginTop="24dp"/>

        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/lay6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/lay5"
        android:layout_marginLeft="9dp"
        android:layout_marginRight="9dp"
        android:layout_marginTop="36dp">

        <EditText
            android:id="@+id/editTextTextPersonName10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Date"
            android:inputType="textPersonName"
            android:layout_weight="1"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="1">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>

            <Button
                android:id="@+id/buttonSave"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Save"
                android:layout_weight="1"/>

        </LinearLayout>

    </LinearLayout>
    </RelativeLayout>

</ScrollView>