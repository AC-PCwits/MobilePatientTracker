<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ConsultationHistoryDetailed">

    <TextView
        android:id="@+id/txtDocName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="23dp"
        android:layout_marginRight="23dp"
        android:text="Doctor Name"
        android:textSize="22dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/lblDocName"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/txtDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Date"
        android:textSize="22dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/lblDate"
        app:layout_constraintStart_toStartOf="@+id/txtTime" />

    <TextView
        android:id="@+id/txtTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="102dp"
        android:layout_marginLeft="102dp"
        android:layout_marginEnd="103dp"
        android:layout_marginRight="103dp"
        android:text="Time"
        android:textSize="22dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/lblTme"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/statusText" />

    <TextView
        android:id="@+id/statusText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginStart="156dp"
        android:layout_marginLeft="156dp"
        android:layout_marginBottom="144dp"
        android:background="@drawable/rounded_corner_pending"
        android:gravity="center"
        android:text="Status"
        android:textColor="#f00"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/txtDocExp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="39dp"
        android:layout_marginLeft="39dp"
        android:layout_marginTop="57dp"
        android:text="Years"
        android:textSize="22dp"
        app:layout_constraintStart_toEndOf="@+id/lblDocExp"
        app:layout_constraintTop_toBottomOf="@+id/txtDocName" />

    <TextView
        android:id="@+id/lblDocName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="175dp"
        android:layout_marginEnd="41dp"
        android:layout_marginRight="41dp"
        android:text="Doctor Name:"
        android:textSize="22dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/txtDocName"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/lblDocExp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:text="Years of Experience:"
        android:textSize="22dp"
        android:textStyle="bold"
        app:layout_constraintBaseline_toBaselineOf="@+id/txtDocExp"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/lblDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="41dp"
        android:layout_marginRight="41dp"
        android:layout_marginBottom="54dp"
        android:text="Date:"
        android:textSize="22dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/lblTme"
        app:layout_constraintEnd_toStartOf="@+id/txtDate" />

    <TextView
        android:id="@+id/lblTme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:layout_marginLeft="2dp"
        android:layout_marginEnd="3dp"
        android:layout_marginRight="3dp"
        android:layout_marginBottom="78dp"
        android:text="Time:"
        android:textSize="22dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/statusText"
        app:layout_constraintEnd_toEndOf="@+id/lblDate"
        app:layout_constraintStart_toStartOf="@+id/statusText" />

    <TextView
        android:id="@+id/textView18"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="47dp"
        android:text="Appointment Details"
        android:textSize="30dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>